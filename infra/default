server {
    server_name arhside.hopto.org;
    server_tokens off;

    location /api/ {
        proxy_pass http://127.0.0.1:8000/;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8000/;
    }

    location /sentry-debug/ {
        proxy_pass http://127.0.0.1:8000/;
    }

    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/arhside.hopto.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/arhside.hopto.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}




server {
    server_name arhsidegramm.ddns.net;
    server_tokens off;

    location /api/ {
        proxy_pass http://127.0.0.1:8080/;
        client_max_body_size 20M;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8080/;
        client_max_body_size 20M;
    }

    location /media/ {
        alias /var/www/infra_sprint1-main/media/;
    }

     location / {
        root   /var/www/infra_sprint1-main;
        index  index.html index.htm;
        try_files $uri /index.html;
    }



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/arhsidegramm.ddns.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/arhsidegramm.ddns.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = arhside.hopto.org) {
        return 301 https://%24host%24request_uri/;
    } # managed by Certbot

    if ($host = arhsidegramm.ddns.net) {
        return 301 https://%24host%24request_uri/;
    } # managed by Certbot

    listen 80;
    server_name arhside.hopto.org, arhsidegramm.ddns.net;
    return 404; # managed by Certbot
}
